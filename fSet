  private void formWindowOpened(WindowEvent evt)
  {
    JButton[][] mesa = { { this.jButton1, this.jButton2, this.jButton3, this.jButton4, this.jButton5, this.jButton6, this.jButton7 }, { this.jButton8, this.jButton9, this.jButton10, this.jButton11, this.jButton12, this.jButton13, this.jButton14 }, { this.jButton15, this.jButton16, this.jButton17, this.jButton18, this.jButton19, this.jButton20, this.jButton21 } };
    
    this.buttonDesiste.setBorderPainted(false);
    this.buttonDesiste.setFocusPainted(false);
    this.buttonDesiste.setContentAreaFilled(false);
    
    ImageIcon icon = new ImageIcon(getClass().getClassLoader().getResource("images/del.png"));
    Image img = icon.getImage();
    img = img.getScaledInstance(32, 32, 4);
    this.buttonDesiste.setIcon(new ImageIcon(img));
    
    this.buttonAjuda.setBorderPainted(false);
    this.buttonAjuda.setFocusPainted(false);
    this.buttonAjuda.setContentAreaFilled(false);
    
    icon = new ImageIcon(getClass().getClassLoader().getResource("images/help.png"));
    img = icon.getImage();
    img = img.getScaledInstance(32, 32, 4);
    this.buttonAjuda.setIcon(new ImageIcon(img));
    
    this.buttonAddColuna.setBorderPainted(false);
    this.buttonAddColuna.setFocusPainted(true);
    this.buttonAddColuna.setContentAreaFilled(false);
    
    icon = new ImageIcon(getClass().getClassLoader().getResource("images/add.png"));
    img = icon.getImage();
    img = img.getScaledInstance(32, 32, 4);
    this.buttonAddColuna.setIcon(new ImageIcon(img));
    
    this.partida = new Set(mesa, this.textBoxPontuacao, this);
    this.partida.Iniciar();
  }
  
  private void buttonAjudaActionPerformed(ActionEvent evt)
  {
    this.partida.MostrarSetNaMesa();
  }
  
  private void buttonDesisteActionPerformed(ActionEvent evt)
  {
    if (this.jogo)
    {
      this.jogo = (!this.partida.Terminar("Continue tentando! Sua pontua����o foi de: " + this.textBoxPontuacao.getText(), false));
      ImageIcon icon = new ImageIcon(getClass().getClassLoader().getResource("images/start.png"));
      Image img = icon.getImage();
      img = img.getScaledInstance(32, 32, 4);
      this.buttonDesiste.setIcon(new ImageIcon(img));
      this.buttonAddColuna.setEnabled(false);
    }
    else
    {
      ImageIcon icon = new ImageIcon(getClass().getClassLoader().getResource("images/del.png"));
      Image img = icon.getImage();
      img = img.getScaledInstance(32, 32, 4);
      this.buttonDesiste.setIcon(new ImageIcon(img));
      this.jogo = true;
      this.partida.Iniciar();
      this.buttonAddColuna.setEnabled(true);
    }
  }
  
  private void buttonAddColunaActionPerformed(ActionEvent evt)
  {
    this.partida.AdicionarColunaSlots();
  }
  
